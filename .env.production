# Meta Ads Intelligence Platform - Production Environment
# IMPORTANT: Set these values in Vercel environment variables

# NextAuth Configuration
NEXTAUTH_SECRET=REPLACE_WITH_32_CHAR_SECRET
NEXTAUTH_URL=https://your-domain.vercel.app

# Application Configuration
NODE_ENV=production
APP_VERSION=2.0.0
LOG_LEVEL=info

# Meta/Facebook Configuration
FACEBOOK_CLIENT_ID=REPLACE_WITH_YOUR_APP_ID
FACEBOOK_CLIENT_SECRET=REPLACE_WITH_YOUR_APP_SECRET
META_SYSTEM_USER_ID=REPLACE_WITH_SYSTEM_USER_ID
META_WEBHOOK_VERIFY_TOKEN=REPLACE_WITH_WEBHOOK_TOKEN

# Database Configuration (use managed database)
DATABASE_URL=mysql://user:password@host:port/database

# Redis Configuration (use managed Redis)
REDIS_URL=redis://user:password@host:port

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ALLOWED_ORIGINS=https://your-domain.vercel.app

# Performance Configuration
API_TIMEOUT_MS=30000
API_MAX_RETRIES=3
CACHE_ACCOUNT_TTL=3600
CACHE_CAMPAIGN_TTL=1800
CACHE_INSIGHTS_TTL=900

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=https://your-domain.vercel.app

# Sync Configuration
SYNC_ENABLED=true
SYNC_BATCH_SIZE=50
SYNC_DELAY_MS=1000
SYNC_MAX_RETRIES=3